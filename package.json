{
    "name": "magic-right",
    "displayName": "Magic Right",
    "description": "Magic Right save your time",
    "version": "1.1.0",
    "publisher": "lebronjs",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/lebronjs/vscode-create-component"
    },
    "engines": {
        "vscode": "^1.47.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:magic-right.createFunctionalComponent"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "magic-right.createFunctionalComponent",
                "title": "ðŸ¤ŸCreate Functional Component"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "magic-right.createFunctionalComponent",
                    "group": "1_modification"
                }
            ]
        },
        "configuration": {
            "title": "Magic Right ",
            "properties": {
                "magicRight.jsExtension": {
                    "type": "string",
                    "default": "jsx",
                    "description": "component's js file extension "
                },
                "magicRight.cssExtension": {
                    "type": "string",
                    "default": "scss",
                    "description": "component's css file extension "
                }
            }
        }
    },
    "scripts": {
        "lint": "eslint .",
        "pretest": "npm run lint",
        "test": "node ./test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.47.0",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0"
    }
}
